<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.WorkerList">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="16dp"
    >

<ImageButton
    android:id="@+id/back_workerbtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:srcCompat="@drawable/back_black"
    android:contentDescription="@string/bkLoginbtnDesc_id"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/workersCat_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category Name"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginStart="5dp"
        />

        </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workersCat_RecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>